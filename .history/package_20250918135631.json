{
  "name": "art24-backend",
  "version": "1.0.0",
  "description": "Backend для Art24 - системы управления картинами по номерам",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "prisma generate --schema=./prisma/schema.prisma",
    "postinstall": "if [ -f ./prisma/schema.prisma ]; then prisma generate --schema=./prisma/schema.prisma; else echo 'Prisma schema not found, skipping generation'; fi",
    "db:generate": "prisma generate --schema=./prisma/schema.prisma",
    "db:push": "prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./prisma/schema.prisma",
    "db:seed": "node src/seed.js",
    "db:deploy": "prisma migrate deploy --schema=./prisma/schema.prisma && npm run db:seed",
    "deploy:frontend": "cd frontend && npm run build && cd .. && node scripts/deploy-spaceweb.js",
    "deploy:all": "npm run deploy:frontend"
  },
  "keywords": [
    "reporting",
    "accounting",
    "paint-by-numbers"
  ],
  "author": "Controlata",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prisma": "^5.7.1",
    "winston": "^3.17.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
